<p id="notice"><%= notice %></p>

<p>
  <strong>Message:</strong>
  <%= @tweet.message.html_safe %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @tweet.user.username, show_user_path(id: @tweet.user.id) %>
</p>

<% if @tweet.user.id == current_user.id %>
  <%= link_to 'Back to Feed', root_path %>
  |
  <%= link_to 'Edit', edit_tweet_path(@tweet) %>
  |
  <%= link_to 'Delete', @tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweet? This cannot be undone." } %>
<% else %>
  <%= link_to 'Back to Feed', root_path %>
<% end %>
